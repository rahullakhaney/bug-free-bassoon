<div class="page-header">
  <div class="container">
    <h2>Change your password</h2>
  </div>
</div>

<div class="container">
  <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), wrapper: :horizontal_form, html: { method: :put, class: "form-horizontal" }) do |f| %>
    <%= f.error_notification %>
    <%= f.input :reset_password_token, as: :hidden %>
    <%= f.full_error :reset_password_token %>

    <div class="form-inputs">
      <%= f.input :password, label: "New password", required: true, autofocus: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
      <%= f.input :password_confirmation, label: "Confirm your new password", required: true %>
    </div>

    <div class="actions col-md-offset-2 col-md-10">
      <%= f.button :submit, "Change my password", class: 'btn btn-primary' %>
    </div>
  <% end %>

  <div class="col-md-offset-2 col-md-10">
    <br/>
    <%= render "devise/shared/links" %>
  </div>
</div>
