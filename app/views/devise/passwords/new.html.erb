<div class="page-header">
  <div class="container">
    <h2>Forgot your password?</h2>
  </div>
</div>

<div class="container">
  <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), wrapper: :horizontal_form, html: { method: :post, class: "form-horizontal" }) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :email, required: true, autofocus: true %>
    </div>

    <div class="actions col-md-offset-2 col-md-10">
      <%= f.button :submit, "Send me reset password instructions", class: 'btn btn-primary' %>
    </div>
  <% end %>

  <div class="col-md-offset-2 col-md-10">
    <br/>
    <%= render "devise/shared/links" %>
  </div>
</div>
