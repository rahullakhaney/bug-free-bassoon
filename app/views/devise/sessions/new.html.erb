<div class="page-header">
  <div class="container">
    <h2>Log in</h2>
  </div>
</div>

<div class="container">
  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), wrapper: :horizontal_form, html: { class: "form-horizontal" }) do |f| %>

    <div class="form-inputs">
      <%= f.input :email, required: false, autofocus: true %>
      <%= f.input :password, required: false %>
      <%= f.input :remember_me, wrapper: :horizontal_boolean, as: :boolean if devise_mapping.rememberable? %>
    </div>

    <div class="actions col-md-offset-2 col-md-10">
      <%= f.button :submit, "Log in", class: 'btn btn-primary' %>
    </div>
  <% end %>

  <div class="col-md-offset-2 col-md-10">
    <br/>
    <%= render "devise/shared/links" %>
  </div>
</div>
