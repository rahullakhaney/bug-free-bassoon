<div class="page-header">
  <div class="container">
    <h2>Resend confirmation instructions</h2>
  </div>
</div>

<div class="container">
  <%= simple_form_for(resource, as: resource_name, url: confirmation_path(resource_name), wrapper: :horizontal_form, html: { method: :post, class: "form-horizontal" }) do |f| %>
    <%= f.error_notification %>
    <%= f.full_error :confirmation_token %>

    <div class="form-inputs">
      <%= f.input :email, required: true, autofocus: true %>
    </div>

    <div class="actions col-md-offset-2 col-md-10">
      <%= f.button :submit, "Resend confirmation instructions", class: "btn btn-primary" %>
    </div>
  <% end %>

  <div class="col-md-offset-2 col-md-10">
    <br/>
    <%= render "devise/shared/links" %>
  </div>
</div>
