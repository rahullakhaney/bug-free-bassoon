<div class="page-header">
  <div class="container">
    <h2>Accept your Invite</h2>
  </div>
</div>

<div class="container">
  <p class="text-center">Create a password to activate your invite.</p>
  <%= simple_form_for(resource, as: resource_name, url: invitation_path(resource_name), html: { method: :put, class: "form-horizontal" }) do |f| %>
    <%= f.input :invitation_token, as: :hidden %>

    <div class="form-inputs">
      <%= f.input :password, required: true, autofocus: true %>
      <%= f.input :password_confirmation, required: true %>
    </div>

    <div class="actions col-md-offset-2 col-md-10">
      <%= f.button :submit, "Activate Invite", class: "btn btn-primary" %>
    </div>
  <% end %>
</div>
